---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'What are you waiting for?',
  subtitle = 'Send us an email or give us a call to start your dance journey today! Remember, the first one is on us!',
} = Astro.props;
---

<section class="contact-form-section">
  <div class="contact-form-inner">
    <h2 class="contact-form-title">{title}</h2>
    <p class="contact-form-subtitle">{subtitle}</p>
    <form class="contact-form" id="contact-page-form">
      <div class="contact-form-grid">
        <div class="contact-form-left">
          <input
            type="text"
            name="name"
            placeholder="Name"
            required
            class="contact-form-input"
          />
          <input
            type="tel"
            name="phone"
            placeholder="Phone Number"
            required
            class="contact-form-input"
          />
          <input
            type="email"
            name="email"
            placeholder="Email"
            required
            class="contact-form-input"
          />
        </div>
        <div class="contact-form-right">
          <textarea
            name="description"
            placeholder="Description"
            rows="5"
            required
            class="contact-form-textarea"
          ></textarea>
        </div>
      </div>
      <button type="submit" class="contact-form-submit">Submit</button>
    </form>
  </div>
</section>

<style>
  .contact-form-section {
    width: 100%;
    background: white;
    padding: 4rem;
  }

  .contact-form-inner {
    margin: 0 auto;
  }

  .contact-form-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0 0 0.75rem 0;
    text-align: center;
    line-height: 1.2;
  }

  .contact-form-subtitle {
    font-size: 1.1rem;
    color: #2c2c2c;
    margin: 0 0 2.5rem 0;
    text-align: center;
    line-height: 1.5;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .contact-form-left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-form-right {
    min-height: 0;
  }

  .contact-form-input,
  .contact-form-textarea {
    width: 100%;
    padding: 0.85rem 1rem;
    border: 1px solid #d0d0d0;
    border-radius: 8px;
    background: white;
    font-size: 1rem;
    color: #2c2c2c;
    font-family: inherit;
    box-sizing: border-box;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .contact-form-input::placeholder,
  .contact-form-textarea::placeholder {
    color: #888;
  }

  .contact-form-input:focus,
  .contact-form-textarea:focus {
    outline: none;
    border-color: #701717;
    box-shadow: 0 0 0 2px rgba(112, 23, 23, 0.15);
  }

  .contact-form-textarea {
    resize: vertical;
    min-height: 140px;
    height: 100%;
  }

  .contact-form-submit {
    width: 100%;
    background: #2c2c2c;
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .contact-form-submit:hover {
    background: #1a1a1a;
    transform: translateY(-1px);
  }

  .contact-form-submit:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .contact-form-section {
      padding: 3rem 1.5rem;
    }

    .contact-form-title {
      font-size: 2rem;
    }

    .contact-form-subtitle {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .contact-form-grid {
      grid-template-columns: 1fr;
    }

    .contact-form-textarea {
      min-height: 120px;
    }
  }

  @media (max-width: 480px) {
    .contact-form-title {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  document.getElementById('contact-page-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const data = Object.fromEntries(new FormData(form).entries());
    console.log('Contact form submitted:', data);
    alert('Thank you for your message! We will get back to you soon.');
    form.reset();
  });
</script>
