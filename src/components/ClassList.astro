---
import ClassCard from './ClassCard.astro';
import type { ImageMetadata } from 'astro';

export interface ClassInfo {
  image: ImageMetadata;
  title: string;
  day: string;
  time: string;
  link?: string;
}

interface Props {
  classes: ClassInfo[];
  sectionTitle?: string;
}

const { 
  classes,
  sectionTitle = "Our Classes"
} = Astro.props;
---

<section class="class-list-section">
  <div class="container">
    {sectionTitle && <h2 class="section-title">{sectionTitle}</h2>}
    
    <div class="class-list">
      {classes.map((classInfo) => (
        <ClassCard 
          image={classInfo.image}
          title={classInfo.title}
          day={classInfo.day}
          time={classInfo.time}
          link={classInfo.link}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .class-list-section {
    width: 100%;
    background: #f5f5f5;
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0 0 3rem 0;
    text-align: center;
  }

  .class-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .class-list-section {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1.5rem;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .class-list {
      gap: 1.5rem;
    }
  }
</style>