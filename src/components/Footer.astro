---
import { Image } from 'astro:assets';
import logo from '../assets/images/CBDS_black_logo.jpg';

interface ContactInfo {
    phone: string;
    email: string;
    address: {
        line1: string;
        line2: string;
    };
}

const contact: ContactInfo = {
    phone: '908-852-0090',
    email: 'info@classicballroom.com',
    address: {
        line1: '6 Hasting Square Mall',
        line2: 'Hackettstown, NJ 07840',
    }
};

interface SocialLink {
    name: string;
    url: string;
    icon: string;
}

const socialLinks: SocialLink[] = [
    { name: 'Instagram', url: 'https://instagram.com/classicballroom', icon:'instagram' },
    { name: 'Facebook', url: 'https://facebook.com/classicballroom', icon:'facebook' },
];
---

<footer class="footer">
    <div class="container">
        <div class="logo-section">
            <Image src={logo} alt="Classic Ballroom Dance Studio" class="logo" />
        </div>

        <div class="contact-section">
            <a href={`tel:${contact.phone.replace(/[^0-9]/g, '')}`} class="contact-item">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                <span>{contact.phone}</span>
            </a>

            <a href={`mailto:${contact.email}`} class="contact-item">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <span>{contact.email}</span>
        </div>

        <div class="address-section">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <div class="address">
                <span>{contact.address.line1}</span>
                <span>{contact.address.line2}</span>
            </div>
        </div>

        <div class="social-section">
            {socialLinks.map(social => (
                <a 
                    href={social.url} 
                    class="social-link" 
                    aria-label={social.name}
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    {social.icon === 'instagram' && (
                        <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
                            <defs>
                                <radialGradient
                                    id="instagramGradient"
                                    cx="30%"
                                    cy="110%"
                                    r="100%"
                                >
                                    <stop offset="0%" stop-color="#fdf497" />
                                    <stop offset="5%" stop-color="#fdf497" />
                                    <stop offset="45%" stop-color="#fd5949" />
                                    <stop offset="900%" stop-color="#d6249f" />
                                    <stop offset="30%" stop-color="#285AEB" />
                                </radialGradient>
                            </defs>
                        <path 
                            fill="url(#instagramGradient)"
                            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                        />
                        </svg>
                    )}
                    {social.icon === 'facebook' && (
                        <svg class="social-icon facebook" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                    )}
                </a>
            ))}
        </div>
    </div>
</footer>

<style>
    .footer {
        background: #f5f5f5;
        border-top: 1px solid #e0e0e0;
        padding: 0.5rem 2rem;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: auto 1fr auto auto;
        align-items: center;
        gap: 10vw;
    }

    .logo-section {
        flex-shrink: 0;
    }

    .logo {
        height: 70px;
        width: auto;
        display: block;
    }

    .contact-section {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: #2c2c2c;
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.2s ease;
    }

    .contact-item:hover {
        color: #8b5a3c;
    }

    .icon {
        width: 25px;
        height: 25px;
        flex-shrink: 0;
    }

    .address-section {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #2c2c2c;
    }

    .address {
        display: flex;
        flex-direction: column;
        font-size: 1.1rem;
        line-height: 1.4;
    }

    .social-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .social-link {
        color: #1877F2;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social-icon {
        width: 32px;
        height: 32px;
    }

    .social-link:hover {
        color: #2887F2;
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .container {
            grid-template-columns: auto 1fr;
            gap: 2rem;
        }

        .address-section {
            grid-column: 1 / -1;
        }

        .social-section {
            grid-column: 1 / -1;
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding: 2rem 0rem;
        }

        .container {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            text-align: center;
        }

        .logo-section {
            display: flex;
            justify-content: center;
        }

        .logo {
            height: 60px;
        }

        .contact-section,
        .address-section {
            justify-content: center;
        }

        .contact-item {
            justify-content: center;
        }
    }
</style>