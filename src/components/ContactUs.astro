---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "What are you waiting for?",
  subtitle = "Send us an email or give us a call to start your dance journey today! Remember, the first one is on us."
} = Astro.props;
---

<section class="contact-section">
  <div class="content-wrapper">
    <div class="form-side">
      <h2 class="title">{title}</h2>
      <p class="subtitle">{subtitle}</p>
      
      <form class="contact-form" id="contact-form">
        <div class="form-row">
          <input 
            type="text" 
            name="name" 
            placeholder="Name" 
            required 
            class="form-input name"
          />
          <input 
            type="tel" 
            name="phone" 
            placeholder="Phone Number" 
            required 
            class="form-input phone"
          />
          <input 
            type="email" 
            name="email" 
            placeholder="Email" 
            required 
            class="form-input"
          />
        </div>
        
        <textarea 
          name="message" 
          placeholder="Description" 
          rows="4" 
          required
          class="form-textarea"
        ></textarea>
        
        <button type="submit" class="submit-button">
          Submit
        </button>
      </form>
    </div>
    
    <div class="image-side">
      <img 
        src="/images/garnerbanner.jpg" 
        alt="Ballroom dancers" 
        class="contact-image"
      />
    </div>
  </div>
</section>

<style>
.contact-section {
  width: 100%;
  background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%);
}

.content-wrapper {
  display: grid;
  grid-template-columns: 50% 50%;
  max-width: 100%;
}

.form-side {
  padding: 3rem 4rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: linear-gradient(135deg, #d5d5d5 0%, #e8e8e8 100%);
}

.title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1a1a1a;
  margin: 0 0 1rem 0;
  line-height: 1.2;
  border-bottom: 4px solid;
}

.subtitle {
  font-size: 1.1rem;
  color: #2c2c2c;
  margin: 0 0 2rem 0;
  line-height: 1.5;
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.form-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 0.5rem;
}

.form-input {
    width: 100%;
}

.name{
    width: 70%;
}

.phone {
    width: 50%;
}

.form-input,
.form-textarea {
  padding: 0.5rem;
  border: none;
  border-radius: 4px;
  background: white;
  font-size: 0.95rem;
  color: #2c2c2c;
  font-family: inherit;
  transition: box-shadow 0.2s ease;
  box-sizing: border-box;
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: #999;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  box-shadow: 0 0 0 2px #8b5a3c;
}

.form-textarea {
  resize: vertical;
  min-height: 55px;
}

.submit-button {
    width: 100%;
    background: #701717;
    color: white;
    padding: 0.85rem 2.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    align-self: flex-start;
    margin-top: 0.5rem;
}

.submit-button:hover {
    background: #4a2415;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(90, 45, 26, 0.3);
}

.submit-button:active {
  transform: translateY(0);
}

.image-side {
  position: relative;
  overflow: hidden;
}

.contact-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

/* Responsive Design */
@media (max-width: 968px) {
  .content-wrapper {
    grid-template-columns: 1fr;
  }

  .form-side {
    padding: 2.5rem 2rem;
  }

  .title {
    font-size: 2rem;
  }

  .form-row {
    flex-direction: column;
  }

  .form-input {
    width: 100%;
  }
}

@media (max-width: 640px) {
  .form-side {
    padding: 2rem 1.5rem;
  }

  .title {
    font-size: 1.75rem;
  }

  .subtitle {
    font-size: 0.9rem;
  }
}
</style>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    // Here you would typically send the data to your backend
    console.log('Form submitted:', data);
    
    // Show success message (you can customize this)
    alert('Thank you for your message! We will get back to you soon.');
    
    // Reset form
    form.reset();
  });
</script>