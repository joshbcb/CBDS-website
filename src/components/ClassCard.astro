---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata;
  title: string;
  day: string;
  time: string;
  link?: string;
}

const { image, title, day, time, link } = Astro.props;
const CardTag = link ? 'a' : 'div';
---

<CardTag href={link} class="class-card">
  <div class="image-side">
    <Image 
      src={image} 
      alt={title} 
      class="class-image"
      loading="lazy"
    />
  </div>
  <div class="text-side">
    <h3 class="class-title">{title}</h3>
    <div class="schedule">
      <p class="day">{day}</p>
      <p class="time">{time}</p>
    </div>
  </div>
</CardTag>

<style>
  .class-card {
    display: grid;
    grid-template-columns: 40% 60%;
    width: 100%;
    background: white;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    height: 110px;
  }

  a.class-card {
    cursor: pointer;
  }

  a.class-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
  }

  .image-side {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .class-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .text-side {
    background: black;
    height: 100%;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: top;
    gap: 0.5rem;
  }

  .class-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
    margin: 0;
    line-height: 1.2;
  }

  .schedule {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }

  .day,
  .time {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    line-height: 1.4;
  }

  .day {
    font-weight: 600;
  }

  .time {
    font-weight: 400;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .class-card {
      grid-template-columns: 1fr;
    }

    .image-side {
      min-height: 180px;
    }

    .text-side {
      padding: 1.5rem;
    }

    .class-title {
      font-size: 1.5rem;
    }

    .day,
    .time {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .image-side {
      min-height: 150px;
    }

    .text-side {
      padding: 1.25rem;
    }

    .class-title {
      font-size: 1.35rem;
    }
  }
</style>