---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface StaffMember {
  name: string;
  title: string;
  bio: string;
  image: ImageMetadata;
}

interface Props {
  staff: StaffMember[];
  sectionTitle?: string;
}

const { 
  staff,
  sectionTitle = "Our Team"
} = Astro.props;
---

<section class="staff-section">
  <div class="staff-grid-inner">
    <h2 class="section-title">{sectionTitle}</h2>
    
    <div class="staff-mobile-nav" aria-label="Switch staff member">
      <button type="button" class="staff-nav-btn staff-prev" aria-label="Previous">‹</button>
      <span class="staff-mobile-counter"><span class="staff-current">1</span> / {staff.length}</span>
      <button type="button" class="staff-nav-btn staff-next" aria-label="Next">›</button>
    </div>

    <div class="staff-photos">
      {staff.map((member, index) => (
        <button 
          class="staff-photo-wrapper" 
          data-index={index}
          class:list={[{ active: index === 0 }]}
          aria-label={`View ${member.name}'s bio`}
        >
          <Image 
            src={member.image} 
            alt={member.name} 
            class="staff-photo"
            loading={index < 6 ? "eager" : "lazy"}
          />
          <div class="photo-overlay"></div>
        </button>
      ))}
    </div>

    <div class="staff-divider" aria-hidden="true"></div>

    <div class="staff-bio-container">
      {staff.map((member, index) => (
        <div 
          class="staff-bio" 
          data-index={index}
          class:list={[{ active: index === 0 }]}
        >
          <h3 class="staff-name">{member.name}</h3>
          <p class="staff-title">{member.title}</p>
          <p class="staff-description">{member.bio}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .staff-section {
    width: 100%;
    background: white;
    padding: 0;
  }

  .staff-grid-inner {
    max-width: 100%;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0;
    padding: 2rem 4rem;
    background: white;
  }

  .staff-mobile-nav {
    display: none;
  }

  .staff-photos {
    display: flex;
    width: 100%;
    background: #2c2c2c;
    position: relative;
  }

  .staff-photo-wrapper {
    flex: 1;
    position: relative;
    aspect-ratio: 3/4;
    border: none;
    padding: 0;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .staff-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    filter: grayscale(100%);
    transition: all 0.3s ease;
  }

  .photo-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease;
  }

  .staff-photo-wrapper:hover .staff-photo {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  .staff-photo-wrapper:hover .photo-overlay {
    background: rgba(0, 0, 0, 0.2);
  }

  .staff-photo-wrapper.active .staff-photo {
    filter: grayscale(0%);
  }

  .staff-photo-wrapper.active .photo-overlay {
    background: rgba(0, 0, 0, 0);
  }

  .staff-photo-wrapper.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: #8b4444;
  }

  .staff-divider {
    width: 100%;
    height: 20px;
  }

  .staff-bio-container {
    position: relative;
    background: #701717;
    min-height: 200px;
    padding: 2rem;
  }

  .staff-bio {
    position: absolute;
    top: 3rem;
    left: 4rem;
    right: 4rem;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    color: white;
  }

  .staff-bio.active {
    position: relative;
    top: auto;
    left: auto;
    right: auto;
    opacity: 1;
    pointer-events: auto;
  }

  .staff-name {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: white;
    border-bottom: 2px solid #FFFFFF;
    max-width: fit-content;
  }

  .staff-title {
    font-size: 1.5rem;
    font-weight: 400;
    font-style: italic;
    margin: 0 0 2rem 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .staff-description {
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 0;
    color: #DDDDDD;
    padding-right: 5rem;
  }

  /* Medium: 3 images in one row, carousel */
  @media (max-width: 968px) {
    .section-title {
      padding: 2rem 2rem;
    }

    .staff-mobile-nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      padding: 1rem 2rem;
      background: #2c2c2c;
      color: white;
    }

    .staff-nav-btn {
      width: 2.5rem;
      height: 2.5rem;
      border: 2px solid rgba(255, 255, 255, 0.6);
      background: transparent;
      color: white;
      font-size: 1.5rem;
      line-height: 1;
      cursor: pointer;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
      transition: background 0.2s, border-color 0.2s;
    }

    .staff-nav-btn:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: white;
    }

    .staff-mobile-counter {
      font-size: 0.9rem;
      font-variant-numeric: tabular-nums;
    }

    .staff-photos {
      flex-wrap: nowrap;
      gap: 4px;
    }

    .staff-photo-wrapper {
      display: none;
      flex: none;
      min-width: 0;
    }

    .staff-photo-wrapper.medium-visible {
      display: block;
      flex: 1 1 calc((100% - 8px) / 3);
      width: calc((100% - 8px) / 3);
      max-width: calc((100% - 8px) / 3);
      aspect-ratio: 3/4;
    }

    .staff-bio-container {
      padding: 2rem;
    }

    .staff-bio {
      left: 2rem;
      right: 2rem;
      top: 2.5rem;
    }

    .staff-name {
      font-size: 1.85rem;
    }
  }

  /* Small: 2 images in one row, carousel. Override medium-visible so only 2 show. */
  @media (max-width: 768px) {
    .staff-mobile-nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      padding: 1rem 2rem;
      background: #2c2c2c;
      color: white;
    }

    .staff-nav-btn {
      width: 2.5rem;
      height: 2.5rem;
      border: 2px solid rgba(255, 255, 255, 0.6);
      background: transparent;
      color: white;
      font-size: 1.5rem;
      line-height: 1;
      cursor: pointer;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
      transition: background 0.2s, border-color 0.2s;
    }

    .staff-nav-btn:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: white;
    }

    .staff-mobile-counter {
      font-size: 0.9rem;
      font-variant-numeric: tabular-nums;
    }

    .staff-photos {
      flex-wrap: nowrap;
      gap: 4px;
    }

    .staff-photo-wrapper {
      display: none;
      flex: none;
      min-width: 0;
    }

    .staff-photo-wrapper.medium-visible {
      display: none;
    }

    .staff-photo-wrapper.mobile-visible {
      display: block;
      flex: 1 1 calc(50% - 2px);
      width: calc(50% - 2px);
      max-width: calc(50% - 2px);
      aspect-ratio: 3/4;
    }

    .staff-description {
      padding-right: 0;
    }
  }

  @media (max-width: 640px) {
    .section-title {
      padding: 1.5rem 1.5rem;
    }

    .staff-photo-wrapper.mobile-visible {
      flex: 1 1 calc(50% - 2px);
      width: calc(50% - 2px);
      max-width: calc(50% - 2px);
    }

    .staff-bio-container {
      padding: 2rem 1.5rem;
    }

    .staff-bio {
      left: 1.5rem;
      right: 1.5rem;
      top: 2rem;
    }

    .staff-title {
      font-size: 1.2rem;
    }

    .staff-description {
      font-size: 0.95rem;
      padding-right: 0;
    }
  }
</style>

<script>
  const photoButtons = document.querySelectorAll('.staff-photo-wrapper');
  const bioDivs = document.querySelectorAll('.staff-bio');
  const prevBtn = document.querySelector<HTMLButtonElement>('.staff-prev');
  const nextBtn = document.querySelector<HTMLButtonElement>('.staff-next');
  const counterEl = document.querySelector<HTMLSpanElement>('.staff-current');
  let currentIndex = 0;
  const total = photoButtons.length;

  function showStaffMember(index: number) {
    const i = ((index % total) + total) % total;
    currentIndex = i;

    photoButtons.forEach(btn => {
      btn.classList.remove('active');
      btn.classList.remove('mobile-visible');
      btn.classList.remove('medium-visible');
    });
    bioDivs.forEach(bio => bio.classList.remove('active'));

    photoButtons[i].classList.add('active');
    bioDivs[i].classList.add('active');

    photoButtons[i].classList.add('mobile-visible');
    photoButtons[(i + 1) % total].classList.add('mobile-visible');

    photoButtons[i].classList.add('medium-visible');
    photoButtons[(i + 1) % total].classList.add('medium-visible');
    photoButtons[(i + 2) % total].classList.add('medium-visible');

    if (counterEl) counterEl.textContent = String(i + 1);
  }

  showStaffMember(0);

  photoButtons.forEach((button, index) => {
    button.addEventListener('click', () => showStaffMember(index));
  });

  prevBtn?.addEventListener('click', () => showStaffMember(currentIndex - 1));
  nextBtn?.addEventListener('click', () => showStaffMember(currentIndex + 1));

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft' && currentIndex > 0) {
      showStaffMember(currentIndex - 1);
    }
    if (e.key === 'ArrowRight' && currentIndex < total - 1) {
      showStaffMember(currentIndex + 1);
    }
  });
</script>