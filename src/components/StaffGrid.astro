---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface StaffMember {
  name: string;
  title: string;
  bio: string;
  image: ImageMetadata;
}

interface Props {
  staff: StaffMember[];
  sectionTitle?: string;
}

const { 
  staff,
  sectionTitle = "Our Team"
} = Astro.props;
---

<section class="staff-section">
  <div class="container">
    <h2 class="section-title">{sectionTitle}</h2>
    
    <div class="staff-photos">
      {staff.map((member, index) => (
        <button 
          class="staff-photo-wrapper" 
          data-index={index}
          class:list={[{ active: index === 0 }]}
          aria-label={`View ${member.name}'s bio`}
        >
          <Image 
            src={member.image} 
            alt={member.name} 
            class="staff-photo"
            loading={index < 6 ? "eager" : "lazy"}
          />
          <div class="photo-overlay"></div>
        </button>
      ))}
    </div>

    <div class="spacer" style="height: 2rem; background: white;"></div>

    <div class="staff-bio-container">
      {staff.map((member, index) => (
        <div 
          class="staff-bio" 
          data-index={index}
          class:list={[{ active: index === 0 }]}
        >
          <h3 class="staff-name">{member.name}</h3>
          <p class="staff-title">{member.title}</p>
          <p class="staff-description">{member.bio}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .staff-section {
    width: 100%;
    background: white;
    padding: 0;
  }

  .container {
    max-width: 100%;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin: 0;
    padding: 2rem 4rem;
    background: white;
  }

  .staff-photos {
    display: flex;
    width: 100%;
    background: #2c2c2c;
    position: relative;
  }

  .staff-photo-wrapper {
    flex: 1;
    position: relative;
    aspect-ratio: 3/4;
    border: none;
    padding: 0;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .staff-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    filter: grayscale(100%);
    transition: all 0.3s ease;
  }

  .photo-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease;
  }

  .staff-photo-wrapper:hover .staff-photo {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  .staff-photo-wrapper:hover .photo-overlay {
    background: rgba(0, 0, 0, 0.2);
  }

  .staff-photo-wrapper.active .staff-photo {
    filter: grayscale(0%);
  }

  .staff-photo-wrapper.active .photo-overlay {
    background: rgba(0, 0, 0, 0);
  }

  .staff-photo-wrapper.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #8b4444;
  }

  .staff-bio-container {
    position: relative;
    background: #701717;
    min-height: 200px;
    padding: 3rem 4rem;
  }

  .staff-bio {
    position: absolute;
    top: 3rem;
    left: 4rem;
    right: 4rem;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    color: white;
  }

  .staff-bio.active {
    opacity: 1;
    pointer-events: auto;
  }

  .staff-name {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    color: white;
    border-bottom: 2px solid #FFFFFF;
    max-width: fit-content;
  }

  .staff-title {
    font-size: 1.5rem;
    font-weight: 400;
    font-style: italic;
    margin: 0 0 2rem 0;
    color: rgba(255, 255, 255, 0.9);
  }

  .staff-description {
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 0;
    color: #DDDDDD;
    padding-right: 5rem;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .section-title {
      padding: 2rem 2rem;
      font-size: 2rem;
    }

    .staff-photos {
      flex-wrap: wrap;
    }

    .staff-photo-wrapper {
      flex: 1 1 calc(33.333% - 1rem);
      min-width: 200px;
    }

    .staff-bio-container {
      padding: 2.5rem 2rem;
    }

    .staff-bio {
      left: 2rem;
      right: 2rem;
      top: 2.5rem;
    }

    .staff-name {
      font-size: 1.85rem;
    }
  }

  @media (max-width: 640px) {
    .section-title {
      padding: 1.5rem 1.5rem;
      font-size: 1.75rem;
    }

    .staff-photo-wrapper {
      flex: 1 1 calc(50% - 0.5rem);
      min-width: 150px;
    }

    .staff-bio-container {
      padding: 2rem 1.5rem;
    }

    .staff-bio {
      left: 1.5rem;
      right: 1.5rem;
      top: 2rem;
    }

    .staff-name {
      font-size: 1.5rem;
    }

    .staff-title {
      font-size: 1rem;
    }

    .staff-description {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  const photoButtons = document.querySelectorAll('.staff-photo-wrapper');
  const bioDivs = document.querySelectorAll('.staff-bio');
  let currentIndex = 0;

  function showStaffMember(index: number) {
    // Remove active class from all
    photoButtons.forEach(btn => btn.classList.remove('active'));
    bioDivs.forEach(bio => bio.classList.remove('active'));

    // Add active class to selected
    photoButtons[index].classList.add('active');
    bioDivs[index].classList.add('active');

    currentIndex = index;
  }

  // Add click listeners to photo buttons
  photoButtons.forEach((button, index) => {
    button.addEventListener('click', () => showStaffMember(index));
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft' && currentIndex > 0) {
      showStaffMember(currentIndex - 1);
    }
    if (e.key === 'ArrowRight' && currentIndex < photoButtons.length - 1) {
      showStaffMember(currentIndex + 1);
    }
  });
</script>