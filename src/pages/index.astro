---
/* Components */
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import Spacer from '../components/Spacer.astro';
import SmallServices from '../components/SmallServices.astro';
import EventCarousel from '../components/EventCarousel.astro';
import ContactUs from '../components/ContactUs.astro';
---

<Layout
  description="Ballroom and Latin dance lessons in Hackettstown, NJ. Group classes, private lessons, weddings, and events. Your first lesson is on us."
>
	<Header transparent={true}/>
	<Hero image="/images/dance_hero1.png" title="Be Classic, Do Ballroom" subtitle="Discover the joy of learning to dance while having fun, meeting new people, and moving to the music with confidence."/>
	<SmallServices />
	<EventCarousel />
	<Spacer height="8rem" />
	<ContactUs />
	<Spacer height="8rem" />
	<Footer />
</Layout>