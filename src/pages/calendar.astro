---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

import ClassList from "../components/ClassList.astro";
import MonthlyCalendars from "../components/MonthlyCalendars.astro";
import EventCarousel from "../components/EventCarousel.astro";

import { classes } from "../data/Classes";
import { currentMonth, nextMonth } from "../data/Calendars";
---

<Layout
  title="Calendar & Classes"
  description="View the class schedule and monthly calendars at Classic Ballroom Dance Studio. Group classes and events in Hackettstown, NJ."
  canonical="/calendar"
/>
    <Header />
    <div class="calendar-layout">
        <div class="calendar-layout-calendars">
            <MonthlyCalendars 
                currentMonth={currentMonth}
                nextMonth={nextMonth}
            />
        </div>
        <div class="calendar-layout-classes">
            <ClassList 
                classes={classes}
                sectionTitle="Regular Classes"
            />
        </div>
    </div>
    <EventCarousel />
    <Footer />
</Layout>

<style>
  /* Desktop: classes left (40%), calendar right (60%). DOM order is calendar then classes, so use row-reverse. */
  .calendar-layout {
    display: flex;
    flex-direction: row-reverse;
  }

  .calendar-layout-calendars {
    width: 60%;
  }

  .calendar-layout-classes {
    width: 40%;
  }

  /* Mobile: calendar on top, classes underneath */
  @media (max-width: 768px) {
    .calendar-layout {
      flex-direction: column;
    }

    .calendar-layout-calendars,
    .calendar-layout-classes {
      width: 100%;
    }
  }
</style>